# Database
DATABASE_URL=postgresql://user:password@localhost:5432/document_ai_db

# Security
SECRET_KEY=your-secret-key-min-32-characters-long-please-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=pdf,docx  # Comma-separated list of allowed file extensions

# Vector Settings
EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_DIMENSION=384

# LLM API (descomente e configure o que for usar)
# OpenAI
# OPENAI_API_KEY=sk-your-api-key-here
# OPENAI_MODEL=gpt-4-turbo-preview

# Azure OpenAI
# AZURE_OPENAI_ENDPOINT=https://your-endpoint.openai.azure.com/
# AZURE_OPENAI_API_KEY=your-azure-key
# AZURE_OPENAI_DEPLOYMENT=gpt-4

# Ollama (local)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama2

# N8n Integration
# N8N_WEBHOOK_URL=http://localhost:5678/webhook/document-upload

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
