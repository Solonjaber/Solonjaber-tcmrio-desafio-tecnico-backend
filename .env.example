# Database
DATABASE_URL=postgresql://user:password@localhost:5432/document_ai_db

# Security (IMPORTANTE: Gere uma chave segura!)
SECRET_KEY=my-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=pdf,docx

# Vector Settings
EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_DIMENSION=384

# LLM API (descomente e configure o que for usar)
# OpenAI
# OPENAI_API_KEY=sk-your-api-key-here
# OPENAI_MODEL=gpt-4-turbo-preview

# Azure OpenAI
# AZURE_OPENAI_ENDPOINT=https://your-endpoint.openai.azure.com/
# AZURE_OPENAI_API_KEY=your-azure-key
# AZURE_OPENAI_DEPLOYMENT=gpt-4

# Ollama (local)
# Para rodar o backend no Docker (Linux) use
# OLLAMA_BASE_URL=http://172.17.0.1:11434
# No Docker Desktop (Windows/Mac), use host.docker.internal
# OLLAMA_BASE_URL=http://host.docker.internal:11434
# Para rodar localmente no ambiente de teste Windows, use:
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:4b

# N8n Integration
# N8N_WEBHOOK_URL=http://localhost:5678/webhook/document-upload

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
